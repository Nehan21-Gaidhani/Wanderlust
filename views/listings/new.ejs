<% layout ("/layouts/boilerplate") %>
<body>
  
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
<div class="row mt-3" >
    <div class="col-8 offset-2">
       
        <h3> Create new one</h3>
    <div class="mb-3">
        <label for="title" class="form-label" >Title</label>
        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required> <div class="invalid-feedback">Title needs to be valid</div>
     </div>
    
         <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control"  required></textarea>
        <div class="invalid-feedback">please enter short description</div>
    </div>
   
     <!-- <div class="mb-3">
            <label for="image" class="form-label">Image</label>
        <input name="listing[image]" placeholder="image url/link" type="text" class="form-control">
    </div> -->

    <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
    <input name="listing[image]"  type="file" class="form-control" required>
</div>
    
    <div class="row">
    <div class="mb-3 col-md-4">
            <label for="price" class="form-label " >Price</label>
        <input name="listing[price]" placeholder="Enter price" class="form-control"required>
        <div class="invalid-feedback">Price needs to be valid</div>
    </div>
   
    <div class="mb-3 col-md-8">
        <label for="country" class="form-label" >Country</label>
    <input name="listing[country]" placeholder="Enter country" type="text" class="form-control"required>
    <div class="invalid-feedback">Country should be entered</div>
</div>

<div class="mb-3 col-md-8">
    <label for="category" class="form-label">Category</label>
    <select name="listing[category]" class="form-control" required>
      <option value="">Select a category</option>
      <option value="rooms">rooms</option>
      <option value="mountains">mountains</option>
      <option value="pools">pools</option>
      <option value="villa">villa</option>
      <option value="arctic">arctic</option>
      <option value="beach">beach</option>
      <option value="farms">farms</option>
      <option value="lake">lake</option>
      <option value="island">island</option>
      <option value="houseboats">lake</option>
      <option value="tropical">lake</option>
      <option value="camping">lake</option>
      <option value="desert">lake</option>
      <option value="treehouse">lake</option>
      <option value="luxe">lake</option>
      <option value="cities">lake</option>
      
      
    </select>
    <div class="invalid-feedback">Category should be selected</div>
  </div>
</div>
     <div class="mb-3">
            <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="location here" type="text" class="form-control" required>
        <div class="invalid-feedback">Location needs to be specified</div>
     </div>
 
        <button class="btn btn-dark add-btn mt-3">Add</button>
  
</div>
</div>
</form>
</body>